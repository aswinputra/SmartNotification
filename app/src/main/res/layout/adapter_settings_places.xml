<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_places_linear_layout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextRadioButton"
        android:layout_marginStart="@dimen/activity_settings_time_margin_start"
        android:layout_marginEnd="@dimen/activity_settings_time_margin_start"
        android:layout_marginTop="@dimen/activity_settings_linear_layout_paddingTopBottom"
        android:id="@+id/activity_settings_location_places_adapter_places"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_settings_location_places_adapter_address"
        android:layout_marginStart="@dimen/activity_settings_time_margin_start"
        android:layout_marginEnd="@dimen/activity_settings_time_margin_start"
        android:layout_marginBottom="@dimen/activity_settings_linear_layout_paddingTopBottom"/>
</LinearLayout>