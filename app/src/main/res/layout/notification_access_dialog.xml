<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_acess_text"
        android:padding="@dimen/delete_dialog_margin"
        android:lineSpacingMultiplier="1.3"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingStart="@dimen/delete_dialog_margin"
        android:paddingEnd="@dimen/delete_dialog_margin"
        android:src="@drawable/notification_acess"
        android:contentDescription="notification access"/>

</LinearLayout>